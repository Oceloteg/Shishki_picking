# ==== App auth ====
APP_PASSWORD=change-me
APP_SECRET_KEY=change-me-to-a-long-random-string
APP_COOKIE_SECURE=false
APP_COOKIE_SAMESITE=Lax   # Lax|Strict|None

# ==== Database ====
DATABASE_URL=sqlite:///./app.db

# ==== Sync ====
SYNC_INTERVAL_SECONDS=60

# ==== 1C integration ====
# ONEC_MODE=mock|odata
ONEC_MODE=mock

# For mock mode: no need to set anything else.
# For real 1C mode:
ONEC_BASE_URL=
ONEC_USERNAME=
ONEC_PASSWORD=

# Transport
ONEC_VERIFY_TLS=true
ONEC_TIMEOUT_SECONDS=30
ONEC_CONCURRENCY=8

# Limit how many orders to pull per sync (best effort)
ONEC_ORDERS_TOP=200

# Set to true to print raw 1C responses in server logs (debug)
ONEC_HTTP_DEBUG=false

# Entity sets (по умолчанию подходят для УНФ / стандартной публикации)
ONEC_ENTITY_ORDERS=Document_ЗаказПокупателя
ONEC_ENTITY_ORDER_LINES=Document_ЗаказПокупателя_Запасы
ONEC_ENTITY_STATUSES=Catalog_СостоянияЗаказовПокупателей
ONEC_ENTITY_CUSTOMERS=Catalog_Контрагенты
ONEC_ENTITY_ITEMS=Catalog_Номенклатура
# Optional: unit names (if you want to show "шт" instead of GUIDs)
ONEC_ENTITY_UNITS=Catalog_КлассификаторЕдиницИзмерения

# Field mapping (если в вашей публикации поля называются иначе — переопределите)
ONEC_ORDER_STATUS_KEY_FIELD=Состояние_Key
ONEC_ORDER_CUSTOMER_KEY_FIELD=Контрагент_Key
ONEC_ORDER_SHIP_DEADLINE_FIELD=ДатаОтгрузки
ONEC_ORDER_COMMENT_FIELD=Comment

ONEC_LINE_ITEM_KEY_FIELD=Номенклатура_Key
ONEC_LINE_QTY_FIELD=Количество
# Можно оставить пустым — тогда единицы не будут подтягиваться
ONEC_LINE_UNIT_FIELD=
# Если пусто — приложение попробует автоопределить поле "собрано" в табличной части
ONEC_LINE_PROGRESS_FIELD=

# Statuses
ONEC_STATUS_PICKING=На сборке
ONEC_STATUS_PICKED=Собран
ONEC_STATUS_IN_WORK=В Работе
ONEC_STATUS_SHIPPED=Отгружен
ONEC_STATUS_FINISHED=Завершен

# A comma-separated list of statuses that should be considered "active" (in addition to NOT posted).
ONEC_ACTIVE_STATUSES=На сборке,В Работе,Собран

# ==== UI thresholds (for "redness") ====
DUE_SOON_HOURS=24
STALE_HOURS=48
